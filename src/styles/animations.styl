$TIME_FACTOR = 1;
$start_at = 0 * $TIME_FACTOR;

@keyframes animationSlowFade {
  0% { opacity: 0; }
  25% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}

@keyframes animationFastFade {
  0% { opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { opacity: 0; }
}

@keyframes logoAnimation {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 1;
    transform: translateY(-.5em) scaleX(0.95) scaleY(0.95);
  }
}

.video-overlay__content {
  #text28 {
    width: 30%;
    line-height: initial;
  }
}

.animate {
  white-space: pre-line;
  color: #cecece;
  line-height: 1.7;

  .video-overlay__content {
    display: flex;
