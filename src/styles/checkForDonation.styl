$errorRed = #ab0000;
$checkingBackgroundColor = $delosDarkBlue;
$notFoundBackgroundColor = $errorRed;

.check-for-donation {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.check-for-donation__card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1em 2em;
  border-radius: 10px;
  background-color: $checkingBackgroundColor;

  span {
    margin-top: 1em;
    text-align: center;
  }

  .loader {
    margin: 20px;
    width: 50px;
    height: 50px;
  }
}

.check-for-donation__card--verified {
  background-color: $checkingBackgroundColor;
}

.check-for-donation__card--not-found {
  .check-for-donation__icon {
    border-radius: 100%;
    background-color: $errorRed;
    color: white;
    line-height: 55px;
  }
}

.check-for-donation__icon {
  display: inline-block;
  padding: 18px;
  width: 40px;
  height: 40px;
  font-size: 60px;
}